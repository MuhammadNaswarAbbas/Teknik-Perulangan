#include <iostream>

#include <conio.h>

using namespace std;



main() {

	int a, b, c, d;

	cout<<"Masukkan Jumlah Baris:";

	cin>>d;

	for(a=d;a>=0;a--){

		for(b=a;b>=0;b--){

			cout<<" ";

		}

 		 for (c=1;c<=d-a;c++) {

			  cout << "*";

		}

      for (c=1;c<=d-a;c++) {

			 cout << "*";

		}

      cout << endl;

 	}

	getch();

	return 0;

}
